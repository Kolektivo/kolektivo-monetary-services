{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src"
  ]
}